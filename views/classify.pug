doctype html
html
    head
        title classify
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
        link(rel="stylesheet", href="stylesheets/classify.css")
        script(src="javascripts/js/jquery-3.3.1.js")
        script(src="javascripts/classify.js")
    body
        .top
            .logo
                .back
                    a(href='page')
                        img(src='images/l-t-l.svg')
                .title ZARA
                .logo-icon
                    a(href='shopping')
                        img(src='images/shoppingcart.svg', alt='')
            .search-group
                .search-icon
                    a(href='')
                        img(src="images/number.svg", alt="")
                .search-box
                    input(type='text')
                    span SEARCH
    .center
        .div
            each i in test
                .div1
                    a(href="detail?id="+i.id)
                        img(src=i.img, alt="")
                        span #{i.name}
                        span #{i.price}
            #showNextPage

    .foot
        .mode
            a(href='classify')
               img(src="images/goods.svg", alt="classify")
            .mode-t PRODUCTS
        .mode
            a(href='login')
               img(src="images/login.svg", alt="login")
            .mode-t MY ACCOUNT
        .mode
            a(href='list')
               img(src="images/eare.svg", alt="")
            .mode-t LIST
